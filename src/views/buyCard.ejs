<!DOCTYPE html>
<html lang="en" dir="ltr">
  <%
    let cardName = '';
    let u = {username: '', password: ''};
    if(typeCard){
      cardName = typeCard;
      u = user;
    }
  %>
  <head>
    <meta charset="utf-8">
    <title>Login & Signup Form | CodingNepal</title>
    <link rel="stylesheet" href="/css/homepage/buyCard/style.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <a id="back" style="
		color: rgb(161, 155, 155);
		font-size: 1.5rem;
		position:absolute;
		top: 10px;
		left: 20px;
		cursor: pointer;
    " href="/">
      <i class="fa fa-angle-left" aria-hidden="true"></i> BACK TO WALLET
    </a>
    <input class="d-none" id="username" value="<%=u.username%>" type="text">
    <input class="d-none" id="password" value="<%=u.password%>" type="text">
    <div class="wrapper">
      <div class="title-text">
        <div class="title login">Buy card</div>
        <div class="title signup">Info card</div>
      </div>
      <div class="form-container">
        <div class="slide-controls">
          <input type="radio" name="slide" id="login" checked>
          <input type="radio" name="slide" id="signup" >
          <label id="homeNetwork" for="login" class="slide login"><%=cardName%></label>
          <label for="signup" class="slide signup">Card Infomation</label>
          <div class="slider-tab"></div>
        </div>
        <div class="form-inner">
          <form id="formBuy" class="login">
            <div id="cart" class="field">
              <div>Choose cards: </div>
              <div class="chooseBox">
                <div class="cardPrice">10.000</div>
                <div class="cardPrice">20.000</div>
                <div class="cardPrice">50.000</div>
                <div class="cardPrice">100.000</div>
              </div>
              <div id="cartBox">
                <div>Cart:</div>
                <div class="cartItem">

                </div>
              </div>
              <div id="errorMsg" style="text-align:center;margin-top:8px;"></div>
            </div>
            <div class="field btn">
              <div class="btn-layer"></div>
              <input type="submit" id="buyBtn" value="Buy">
            </div>
          </form>
          <form id="formInfor" method="post" action='http://localhost:8080/resetPageBuyCard' class="signup">
            <div><b><%=cardName%></b></div>
            <div id="IDsCard" class="field">
              
            </div>
            <div class="field">
              <input type="text" value="Phí giao dịch: 0d" disabled>
            </div>
            <div class="field btn">
              <div class="btn-layer"></div>
              <input name="username" class="d-none" value="<%=u.username%>" type="text">
              <input name="password" class="d-none" value="<%=u.password%>" type="text">
              <input name="typeCard" class="d-none" value="<%=u.cardName%>" type="text">
             <input type="submit" id="OKBtn" value="OK">
            </div>
          </form>
        </div>
      </div>
    </div>

    <script src="/js/cardPage/index.js"></script>
  </body>
</html>
