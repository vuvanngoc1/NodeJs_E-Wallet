<!-- modalConfirm -->
<div id="confirmModal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5  class="modal-title text-black">CONFIRM</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="titleConfirm" class="modal-body">
        Do you want to reopen this account?
      </div>
      <div class="modal-footer">
        <button onclick="confirm()" id="yes" type="button" class="btn btn-primary">Yes</button>
        <button  id="no" type="button" class="btn btn-secondary">No</button>
      </div>
    </div>
  </div>
</div>
<!-- javascript-->>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<script>
  $(window).on('load',()=>{
    $('.itemTr').on('click',()=>{
      $('#modalDetail').modal('show');
    })

    $('.badge').on('click',()=>{
      $('#confirmModal').modal('show');
    })

    $('#no').on('click',()=>{
      $('#confirmModal').modal('hide');
    })
  })

  const inputs = document.querySelectorAll('#detailForm input');
  const yes = document.querySelector('#yes ');
  const no = document.querySelector('#no ');
  const titleConfirm = document.querySelector('#titleConfirm ');

  const detailHandle = (data)=>{
    inputs[0].value = JSON.parse(data).fullname;
    inputs[1].value = JSON.parse(data).phone;
    inputs[2].value = JSON.parse(data).email;
    inputs[3].value = JSON.parse(data).birthday;
    inputs[4].value = JSON.parse(data).address;
    inputs[5].value = JSON.parse(data).dateCreate;

    const frontCard = document.querySelector('#frontCard');
    const backCard = document.querySelector('#backCard');

    frontCard.src = data.frontCard;
    backCard.src = data.backCard;
  }

  const confirm = ()=>{
    acceptAcc();
  }

  const acceptAcc = ()=>{
    fetch('http://localhost:8080/admin/unlockAccount',{
      method: 'POST', 
      headers: {
          'Content-Type': 'application/json',
      },
      body: JSON.stringify({email:document.querySelector('#email').value})
    })
    .then(res=>res.json())
    .then(result=>{
      if(result.code == 0){
        window.location.href = 'http://localhost:8080/accountDisableInfinite';
      }
    })
  }
</script>

