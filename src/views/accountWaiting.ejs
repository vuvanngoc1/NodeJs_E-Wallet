<!DOCTYPE html>
<html lang="en">

    <head>
        <title>Danh sách nhân viên | Quản trị Admin</title>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- Main CSS-->
        <link rel="stylesheet" type="text/css" href="css/admin/main.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
        <!-- or -->
        <link rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css">
      
        <!-- Font-icon css-->
        <link rel="stylesheet" type="text/css"
          href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
      </head>
      </head>

<body class="app sidebar-mini rtl">
   <!-- Navbar-->
   <header class="app-header">
    <!-- Sidebar toggle button--><a class="app-sidebar__toggle" href="#" data-toggle="sidebar"
      aria-label="Hide Sidebar"></a>
    <!-- Navbar Right Menu-->
    <ul class="app-nav">


      <!-- User Menu-->
      <li style="margin-right: -30px;"><div style="cursor:pointer" class="app-nav__item"><a href="login"><i class='bx bx-log-out bx-rotate-180'></i> </a></div>
      </li>
    </ul>
  </header>
  <!-- Sidebar menu-->
  <div class="app-sidebar__overlay" data-toggle="sidebar"></div>
  <aside class="app-sidebar">
    <div class="app-sidebar__user">
      <div>
        <p class="app-sidebar__user-name"><b>Admin</b></p>
      </div>
    </div>
    <hr>
    <ul class="app-menu">
      <li><a class="app-menu__item " href="admin"><i class='app-menu__icon bx bx-tachometer'></i><span
        class="app-menu__label">Dashboard</span></a></li>
      <li><a class="app-menu__item active" href="accountWaiting"><i class='app-menu__icon bx bx-user-voice'></i><span
        class="app-menu__label">Account waiting</span></a></li>
      <li><a class="app-menu__item " href="accountActivated"><i
        class='app-menu__icon bx bx-purchase-tag-alt'></i><span class="app-menu__label">account activated</span></a>
      </li>
      <li><a class="app-menu__item" href="accountDisable"><i class='app-menu__icon bx bx-task'></i><span
            class="app-menu__label">Account disabled</span></a></li>
      <li><a class="app-menu__item" href="accountDisableInfinite"><i class='app-menu__icon bx bx-run'></i><span
            class="app-menu__label">Indefinitely disabled 
          </span></a></li>
      <li><a class="app-menu__item" href="withdrawRequest"><i class='app-menu__icon bx bx-calendar-check'></i><span
            class="app-menu__label">Transaction request</span></a></li>
    </ul>
  </aside>
  <main class="app-content">
    <div class="app-title">
      <ul class="app-breadcrumb breadcrumb side">
        <li class="breadcrumb-item active"><a href="accountWaiting"><b>Accounts list</b></a></li>
      </ul>
    </div>
            <table class="table table-hover table-bordered js-copytextarea" cellpadding="0" cellspacing="0" border="0"
              id="sampleTable">
              <thead>
                <tr>
                  <th width="100">N.O</th>
                  <th width="300">Full Name</th>
                  <th width="500">Address</th>
                  <th>Date register</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <%
                  let accounts = [];
                  if(data.length > 0) {
                    accounts = data;
                  }
                  if(accounts.length>0){
                    accounts.forEach((item,index)=>{
                      %>
                      <tr onclick="detailHandle('<%= JSON.stringify(item) %>')" class="itemTr" style="cursor:pointer">
                        <td><%= index+1 %></td>
                        <td><%= item.fullname %></td>
                        <td><%= item.address %></td>
                        <td><%= item.dateCreate %></td>
                        <td><b class="badge bg-info"><%= item.status %></b></td>
                      </tr>
                      <%
                    })
                  }
                %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- modal detail -->
    <div id="modalDetail" class="modal fade" tabindex="-1">
      <div class="modal-dialog modal-lg" >
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title text-black">Details</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="sideBox">
              <div id="detailForm">
                <div class="mb-3">
                  <label class="form-label">Full Name</label>
                  <input type="email" class="form-control" aria-describedby="emailHelp" disabled>
                </div>
                <div class="mb-3">
                  <label class="form-label">Phone number</label>
                  <input type="text" class="form-control" disabled>
                </div>
                <div class="mb-3">
                  <label class="form-label">Email</label>
                  <input id="email" type="text" class="form-control" disabled>
                </div>
                <div class="mb-3">
                  <label class="form-label">Birthday</label>
                  <input type="text" class="form-control" disabled>
                </div>
                <div class="mb-3">
                  <label class="form-label">Address</label>
                  <input type="text" class="form-control" disabled>
                </div>
                <div class="mb-3">
                  <label class="form-label">Date register</label>
                  <input type="text" class="form-control" disabled>
                </div>
              </div>
            </div>
            <div class="sideBox sideCard">
                <div style="padding: 5px 30px"><b>Front ID Card:</b></div>
                <img id="frontCard" src="" alt="">
                <div style="padding: 5px 30px"><b>Back ID Card:</b></div>
                <img id="backCard" src="" alt="">
            </div>
          </div>
          <div class="modal-footer">
            <div onclick="titleConfirm.innerText = 'Do you want to disable this account?';document.querySelector('#action').value='disable';" style="width: 50px;height:50px;line-height:39px;" class="badge bg-danger text-white">
              <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
              </svg>
            </div>
            <div onclick="titleConfirm.innerText = 'Do you want to accept this account?';document.querySelector('#action').value='Verified';" style="width: 50px;height:50px;line-height:39px;" class="badge bg-success text-white" id="a">
              <i class="fa fa-check"></i>
            </div>
            <div onclick="titleConfirm.innerText = 'Do you want to require ID card?';document.querySelector('#action').value='request';" style="width: 50px;height:50px;line-height:39px;" class="badge bg-warning text-white">
              <i class="fa fa-bell"></i>
              <input class="d-none" id="action" value=""></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- modalConfirm -->
  <div id="confirmModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5  class="modal-title text-black">CONFIRM</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div id="titleConfirm" class="modal-body">
          
        </div>
        <div class="modal-footer">
          <button onclick="confirm()" id="yes" type="button" class="btn btn-primary">Yes</button>
          <button  id="no" type="button" class="btn btn-secondary">No</button>
        </div>
      </div>
    </div>
  </div>
<!--
MODAL
-->
<script>
  $(window).on('load',()=>{
    $('.itemTr').on('click',()=>{
      $('#modalDetail').modal('show');
    })

    $('.badge').on('click',()=>{
      $('#confirmModal').modal('show');
    })

    $('#no').on('click',()=>{
      $('#confirmModal').modal('hide');
    })
  })

  const inputs = document.querySelectorAll('#detailForm input');
  const yes = document.querySelector('#yes ');
  const no = document.querySelector('#no ');
  const titleConfirm = document.querySelector('#titleConfirm ');

  const detailHandle = (data)=>{
    data = JSON.parse(data);
    
    inputs[0].value = data.fullname;
    inputs[1].value = data.phone;
    inputs[2].value = data.email;
    inputs[3].value = data.birthday;
    inputs[4].value = data.address;
    inputs[5].value = data.dateCreate;

    const frontCard = document.querySelector('#frontCard');
    const backCard = document.querySelector('#backCard');

    frontCard.src = data.frontCard;
    backCard.src = data.backCard;
  }


  const confirm = ()=>{
    const action = document.querySelector('#action').value;
    if(action == 'disable'){
      disableAcc();
    }else if(action == 'Verified'){
      acceptAcc();
    }else{
      requestAcc();
    }
  }

  const disableAcc = ()=>{
    fetch('http://localhost:8080/admin/modified',{
      method: 'POST', 
      headers: {
          'Content-Type': 'application/json',
      },
      body: JSON.stringify({email:document.querySelector('#email').value,action:'disable'})
    })
    .then(res=>res.json())
    .then(result=>{
      if(result.code == 0){
        window.location.href = 'http://localhost:8080/accountWaiting';
      }
    })
  }

  const acceptAcc = ()=>{
    fetch('http://localhost:8080/admin/modified',{
      method: 'POST', 
      headers: {
          'Content-Type': 'application/json',
      },
      body: JSON.stringify({email:document.querySelector('#email').value,action:'accept'})
    })
    .then(res=>res.json())
    .then(result=>{
      if(result.code == 0){
        window.location.href = 'http://localhost:8080/accountWaiting';
      }
    })
  }

  const requestAcc = ()=>{
    fetch('http://localhost:8080/admin/modified',{
      method: 'POST', 
      headers: {
          'Content-Type': 'application/json',
      },
      body: JSON.stringify({email:document.querySelector('#email').value,action:'request'})
    })
    .then(res=>res.json())
    .then(result=>{
      if(result.code == 0){
        window.location.href = 'http://localhost:8080/accountWaiting';
      }
    })
  }
</script>
</body>

</html>